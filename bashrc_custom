# vim: ft=sh

set -o vi
shopt -s globstar
HISTFILESIZE=1000000

# Docker
alias dcln='docker rmi $(docker images -qf dangling=true)'
alias drmc='docker rm $(docker ps -a -q) && dcln'
alias dc='docker-compose'

# Python
. $HOME/.local/bin/virtualenvwrapper.sh
export PYENV_ROOT=$HOME/.pyenv
export PATH=$PYENV_ROOT/bin:$PATH
eval "$(pyenv init -)"

# Go
export GOPATH=$HOME/g
export PATH=$PATH:/usr/local/go/bin:$GOPATH/bin
alias godir='cd $HOME/g/src/github.com/team-telnyx'

# Elixir
export PATH=$PATH:$HOME/e/elixir/bin

# Node
export PATH=$PATH:$HOME/extern/node-v6.10.2-linux-x64/bin

# liquidprompt
[[ $- = *i* ]] && . ~/extern/liquidprompt/liquidprompt
